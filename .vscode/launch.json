{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch TS",
      "type": "pwa-node",
      "request": "launch",
      "runtimeArgs": ["-r", "ts-node/register"],
      "cwd": "${workspaceRoot}",
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "args": ["${file}"]
    }
  ]
}
